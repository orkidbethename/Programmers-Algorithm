SELECT A.EMP_CODE,
	(SELECT B.SALARY_BASE_AMT FROM HRPANNUALSALARYHISTORY B WHERE A.EMP_CODE = B.EMP_CODE AND B.APPLY_START_DATE<='20230611' AND B.APPLY_END_DATE>='20230611'),
	(SELECT B.SALARY_BASE_AMT FROM HRPANNUALSALARYHISTORY B WHERE A.EMP_CODE = B.EMP_CODE AND B.APPLY_START_DATE<='20230701' AND B.APPLY_END_DATE>='20230701'),
	(SELECT B.SALARY_BASE_AMT FROM HRPANNUALSALARYHISTORY B WHERE A.EMP_CODE = B.EMP_CODE AND B.APPLY_START_DATE<='20230801' AND B.APPLY_END_DATE>='20230801'),
	(SELECT B.SALARY_BASE_AMT FROM HRPANNUALSALARYHISTORY B WHERE A.EMP_CODE = B.EMP_CODE AND B.APPLY_START_DATE<='20230901' AND B.APPLY_END_DATE>='20230901')
FROM HRIMASTER A
WHERE A.EMP_CODE = '2263350'
